<link href="css/Moviessheet.css" rel="stylesheet" type="text/css" />
@model IEnumerable<Actor>
@{
    ViewData["Title"] = "Index";
}

<body>
    <h1>Actors</h1>
    <br />
    @for (int i=0; i<Model.Count(); i++)
    {
        <div class="box">
            <a asp-controller = "Actors" asp-action="Actor"asp-route-id="@Model.ElementAt(i).Id">
                <img src="@Model.ElementAt(i).Portrait">
            </a>
            <br/>
            <div class="hidden">
                <h3>@Model.ElementAt(i).Name @Model.ElementAt(i).Surname</h3>
                <p>Rating: @Model.ElementAt(i).Rating</p>
                <p>Born: @Model.ElementAt(i).BirthDate</p>
            </div>
            
        </div>
    }
</body>


